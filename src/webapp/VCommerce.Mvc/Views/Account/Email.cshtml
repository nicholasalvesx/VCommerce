@{
    ViewData["Title"] = "Email Confirmado";
}

<link rel="stylesheet" href="/css/email.css" asp-append-version="true" />

<div class="email-confirmation-container">
    <div class="confirmation-card">
        <div class="confirmation-icon success">
            <i class="fas fa-check"></i>
        </div>
        
        <h1 class="confirmation-title">Email Confirmado com Sucesso!</h1>
        
        <div class="confirmation-message">
            <p>Seu email foi confirmado e sua conta está ativa.</p>
            <p>Agora você pode acessar todos os recursos da VCommerce.</p>
        </div>
        
        <div class="confirmation-actions">
            <a href="@Url.Action("Login", "Account")" class="btn btn-primary btn-lg">
                <i class="fas fa-sign-in-alt"></i> Fazer Login
            </a>
        </div>
    </div>
</div>
