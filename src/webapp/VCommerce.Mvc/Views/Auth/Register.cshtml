@model VCommerce.Mvc.Models.RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
}

<div class="register-container">
    <div class="register-card">
        <div class="logo">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="logo-icon">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="8.5" cy="7" r="4"></circle>
                <line x1="20" y1="8" x2="20" y2="14"></line>
                <line x1="23" y1="11" x2="17" y2="11"></line>
            </svg>
        </div>

        <h1>Criar uma conta</h1>
        <p class="subheading">Preencha os dados abaixo para se cadastrar</p>

        <div class="social-signup">
            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Google" class="social-btn google">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M12 22C6.477 22 2 17.523 2 12S6.477 2 12 2s10 4.477 10 10-4.477 10-10 10z"></path>
                    <path d="M15 9l-6 6"></path>
                    <path d="M9 9l6 6"></path>
                </svg>
                <span>Cadastrar com Google</span>
            </a>
            <a asp-controller="Account" asp-action="ExternalLogin" asp-route-provider="Twitter" class="social-btn twitter">
                <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                    <path d="M22 4s-.7 2.1-2 3.4c1.6 10-9.4 17.3-18 11.6 2.2.1 4.4-.6 6-2C3 15.5.5 9.6 3 5c2.2 2.6 5.6 4.1 9 4-.9-4.2 4-6.6 7-3.8 1.1 0 3-1.2 3-1.2z"></path>
                </svg>
                <span>Cadastrar com Twitter</span>
            </a>
        </div>

        <div class="divider">
            <span>ou</span>
        </div>

        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            @Html.AntiForgeryToken()

            <div class="form-row">
                <div class="form-group">
                    <input asp-for="FirstName" type="text" placeholder="Nome" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" type="text" placeholder="Sobrenome" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input asp-for="Email" type="email" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Senha" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirmar senha" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="terms-checkbox">
                <label>
                    <input asp-for="AcceptTerms" type="checkbox" required />
                    <span>Eu concordo com os <a href="/terms">Termos de Uso</a> e <a href="/privacy">Política de Privacidade</a></span>
                </label>
                <span asp-validation-for="AcceptTerms" class="text-danger"></span>
            </div>

            <button type="submit" class="cta-button">Criar Conta</button>
        </form>

        <p class="login-prompt">
            Já tem uma conta? <a asp-controller="Account" asp-action="Login">Entrar</a>
        </p>

        <div class="links">
            <a href="/terms">Termos</a>
            <a href="/privacy">Política de Privacidade</a>
            <a href="/help">Ajuda</a>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .register-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f5f0ff 0%, #e0d0ff 100%);
        padding: 20px;
    }

    .register-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        padding: 40px;
        width: 100%;
        max-width: 480px;
        text-align: center;
    }

    .logo {
        margin-bottom: 24px;
        color: #7e57c2;
    }

    h1 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 12px;
        color: #333;
    }

    .subheading {
        font-size: 16px;
        color: #666;
        margin-bottom: 32px;
        line-height: 1.5;
    }

    .social-signup {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 24px;
    }

    .social-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background: white;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.2s ease;
        text-decoration: none;
        color: #333;
    }

    .social-btn:hover {
        background: #f9f9f9;
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 24px 0;
    }

    .divider::before,
    .divider::after {
        content: "";
        flex: 1;
        border-bottom: 1px solid #e0e0e0;
    }

    .divider span {
        padding: 0 12px;
        color: #888;
        font-size: 14px;
    }

    .form-row {
        display: flex;
        gap: 12px;
    }

    .form-row .form-group {
        flex: 1;
    }

    .form-group {
        margin-bottom: 16px;
    }

    input[type="email"],
    input[type="password"],
    input[type="text"] {
        width: 100%;
        padding: 14px 16px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.2s;
        box-sizing: border-box;
    }

    input[type="email"]:focus,
    input[type="password"]:focus,
    input[type="text"]:focus {
        outline: none;
        border-color: #7e57c2;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        display: block;
        margin-top: 5px;
        text-align: left;
    }

    .terms-checkbox {
        display: flex;
        align-items: flex-start;
        margin-bottom: 20px;
        text-align: left;
    }

    .terms-checkbox label {
        display: flex;
        align-items: flex-start;
        gap: 8px;
        font-size: 14px;
        cursor: pointer;
    }

    .terms-checkbox input {
        margin-top: 3px;
    }

    .terms-checkbox a {
        color: #7e57c2;
        text-decoration: none;
    }

    .terms-checkbox a:hover {
        text-decoration: underline;
    }

    .cta-button {
        width: 100%;
        padding: 14px;
        background: #7e57c2;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .cta-button:hover {
        background: #6a48a8;
    }

    .login-prompt {
        margin-top: 24px;
        font-size: 14px;
        color: #666;
    }

    .login-prompt a {
        color: #7e57c2;
        text-decoration: none;
        font-weight: 500;
    }

    .login-prompt a:hover {
        text-decoration: underline;
    }

    .links {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-top: 24px;
        margin-bottom: 16px;
    }

    .links a {
        color: #666;
        font-size: 14px;
        text-decoration: none;
    }

    .links a:hover {
        color: #7e57c2;
        text-decoration: underline;
    }

    .form-row {
        flex-direction: column;
        gap: 0;
    }
    
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}