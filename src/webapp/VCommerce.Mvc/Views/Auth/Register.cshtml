@model VCommerce.Mvc.Models.RegisterViewModel
@{
    ViewData["Title"] = "Cadastro";
}

<link rel="stylesheet" href="/css/register.css" asp-append-version="true" />

<div class="register-container">
    <div class="register-card">
        <div class="logo">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="logo-icon">
                <path d="M16 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"></path>
                <circle cx="8.5" cy="7" r="4"></circle>
                <line x1="20" y1="8" x2="20" y2="14"></line>
                <line x1="23" y1="11" x2="17" y2="11"></line>
            </svg>
        </div>

        <h1>Criar uma conta</h1>
        <p class="subheading">Preencha os dados abaixo para se cadastrar</p>
     
        <form method="post" asp-controller="Account" asp-action="Register">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            @Html.AntiForgeryToken()

            <div class="form-row">
                <div class="form-group">
                    <input asp-for="FirstName" type="text" placeholder="Nome" required />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input asp-for="LastName" type="text" placeholder="Sobrenome" required />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <input asp-for="Email" type="email" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Senha" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input asp-for="ConfirmPassword" type="password" placeholder="Confirmar senha" required />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="terms-checkbox">
                <label>
                    <input asp-for="AcceptTerms" type="checkbox" required />
                    <span>Eu concordo com os <a href="/terms">Termos de Uso</a> e <a href="/privacy">Política de Privacidade</a></span>
                </label>
                <span asp-validation-for="AcceptTerms" class="text-danger"></span>
            </div>

            <button type="submit" class="cta-button">Criar Conta</button>
        </form>

        <p class="login-prompt">
            Já tem uma conta? <a asp-controller="Account" asp-action="Login">Entrar</a>
        </p>

        <div class="links">
            <a href="/terms">Termos</a>
            <a href="/privacy">Política de Privacidade</a>
            <a href="/help">Ajuda</a>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}