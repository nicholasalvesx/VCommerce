@model VCommerce.Mvc.Models.LoginViewModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="login-card">
        <div class="logo">
            <svg xmlns="http://www.w3.org/2000/svg" width="48" height="48" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="logo-icon">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
            </svg>
        </div>

        <h1>Bem-vindo de volta</h1>
        <p class="subheading">Entre na sua conta para continuar</p>
        
        <form method="post" asp-controller="Account" asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ReturnUrl" />
            @Html.AntiForgeryToken()

            <div class="form-group">
                <input asp-for="Email" type="email" placeholder="Email" required />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" type="password" placeholder="Senha" required />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="remember-forgot">
                <label class="remember-me">
                    <input asp-for="RememberMe" type="checkbox" />
                    <span>Lembrar-me</span>
                </label>
                <a asp-controller="Account" asp-action="ForgotPassword" class="forgot-password">Esqueceu a senha?</a>
            </div>
            <button type="submit" class="cta-button">Entrar</button>
        </form>

        <p class="signup-prompt">
            Não tem uma conta? <a asp-controller="Account" asp-action="Register">Cadastre-se</a>
        </p>

        <div class="links">
            <a href="/terms">Termos</a>
            <a href="/privacy">Política de Privacidade</a>
            <a href="/help">Ajuda</a>
        </div>
    </div>
</div>

<style>
    body {
        margin: 0;
        padding: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        color: #333;
    }

    .login-container {
        min-height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
        background: linear-gradient(135deg, #f5f0ff 0%, #e0d0ff 100%);
        padding: 20px;
    }

    .login-card {
        background: white;
        border-radius: 12px;
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.08);
        padding: 40px;
        width: 100%;
        max-width: 480px;
        text-align: center;
    }

    .logo {
        margin-bottom: 24px;
        color: #7e57c2;
    }

    h1 {
        font-size: 24px;
        font-weight: 600;
        margin-bottom: 12px;
        color: #333;
    }

    .subheading {
        font-size: 16px;
        color: #666;
        margin-bottom: 32px;
        line-height: 1.5;
    }

    .social-signup {
        display: flex;
        flex-direction: column;
        gap: 12px;
        margin-bottom: 24px;
    }

    .social-btn {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 8px;
        padding: 12px;
        border-radius: 8px;
        border: 1px solid #e0e0e0;
        background: white;
        cursor: pointer;
        font-size: 14px;
        transition: all 0.2s ease;
        text-decoration: none;
        color: #333;
    }

    .social-btn:hover {
        background: #f9f9f9;
    }

    .divider {
        display: flex;
        align-items: center;
        margin: 24px 0;
    }

    .divider::before,
    .divider::after {
        content: "";
        flex: 1;
        border-bottom: 1px solid #e0e0e0;
    }

    .divider span {
        padding: 0 12px;
        color: #888;
        font-size: 14px;
    }

    .form-group {
        margin-bottom: 16px;
    }

    input[type="email"],
    input[type="password"],
    input[type="text"] {
        width: 100%;
        padding: 14px 16px;
        border: 1px solid #e0e0e0;
        border-radius: 8px;
        font-size: 16px;
        transition: border-color 0.2s;
        box-sizing: border-box;
    }

    input[type="email"]:focus,
    input[type="password"]:focus,
    input[type="text"]:focus {
        outline: none;
        border-color: #7e57c2;
    }

    .text-danger {
        color: #dc3545;
        font-size: 12px;
        display: block;
        margin-top: 5px;
        text-align: left;
    }

    .remember-forgot {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 20px;
        font-size: 14px;
    }

    .remember-me {
        display: flex;
        align-items: center;
        gap: 6px;
        cursor: pointer;
    }

    .forgot-password {
        color: #7e57c2;
        text-decoration: none;
    }

    .forgot-password:hover {
        text-decoration: underline;
    }

    .cta-button {
        width: 100%;
        padding: 14px;
        background: #7e57c2;
        color: white;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        font-weight: 600;
        cursor: pointer;
        transition: background 0.2s;
    }

    .cta-button:hover {
        background: #6a48a8;
    }

    .signup-prompt {
        margin-top: 24px;
        font-size: 14px;
        color: #666;
    }

    .signup-prompt a {
        color: #7e57c2;
        text-decoration: none;
        font-weight: 500;
    }

    .signup-prompt a:hover {
        text-decoration: underline;
    }

    .links {
        display: flex;
        justify-content: center;
        gap: 16px;
        margin-top: 24px;
        margin-bottom: 16px;
    }

    .links a {
        color: #666;
        font-size: 14px;
        text-decoration: none;
    }

    .links a:hover {
        color: #7e57c2;
        text-decoration: underline;
    }

    
    .remember-forgot {
        flex-direction: column;
        align-items: flex-start;
        gap: 10px;
    }
    
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}