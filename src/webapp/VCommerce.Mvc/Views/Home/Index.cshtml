@model IEnumerable<VCommerce.Mvc.Models.ProductViewModel>

@{
    ViewData["Title"] = "Dashboard";
}

<link rel="stylesheet" href="/css/product.css" asp-append-version="true" />
<link rel="stylesheet" href="/css/dashboard.css" asp-append-version="true" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" integrity="sha512-iecdLmaskl7CVkqkXNQ/ZH/XLlvWZOJyj7Yy7tcenmpD1ypASozpmT/E0iPtmFIB46ZmdtAc9eNBvH0H/ZpiBw==" crossorigin="anonymous" referrerpolicy="no-referrer" />

<div class="dashboard-container">
    <aside class="sidebar">
        <div class="sidebar-header">
            <div class="logo">
                <i class="fas fa-store"></i>
                <h3>VCommerce</h3>
            </div>
            <button id="sidebar-toggle" class="sidebar-toggle d-md-none">
                <i class="fas fa-bars"></i>
            </button>
        </div>

        <div class="sidebar-user">
            <i class="fas fa-user-ninja"></i>
            <div class="user-info">
                <h4>Admin User</h4>
                <span>Adminstrador</span>
            </div>
        </div>

        <nav class="sidebar-nav">
            <div class="nav-section">
                <h5 class="nav-section-title">PRINCIPAL</h5>
                <ul class="sidebar-menu">
                    <li class="active">
                        <a href="/Home/Index">
                            <i class="fas fa-home"></i>
                            <span>Dashboard</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Products/Index">
                            <i class="fas fa-box"></i>
                            <span>Products</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Customers/Index">
                            <i class="fas fa-users"></i>
                            <span>Customers</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Account/Login">
                            <i class="fas fa-user"></i>
                            <span>Login</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Account/Register">
                            <i class="fas fa-user-plus"></i>
                            <span>Register</span>
                        </a>
                    </li>
                </ul>
            </div>

            <div class="nav-section">
                <h5 class="nav-section-title">CONFIGURAÇÔES</h5>
                <ul class="sidebar-menu">
                    <li>
                        <a href="/Settings/Profile">
                            <i class="fas fa-user-cog"></i>
                            <span>Profile</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Settings/Index">
                            <i class="fas fa-cog"></i>
                            <span>Settings</span>
                        </a>
                    </li>
                    <li>
                        <a href="/Account/Logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    </li>
                </ul>
            </div>
        </nav>
    </aside>

    <main class="main-content">
        <header class="header">
            <div class="header-left">
                <button id="mobile-toggle" class="mobile-toggle d-md-none">
                    <i class="fas fa-bars"></i>
                </button>
                <div class="search-container">
                    <i class="fas fa-search search-icon"></i>
                    <input type="text" placeholder="Search..." class="search-input" />
                </div>
            </div>

            <div class="header-right">
                <div class="header-actions">
                    <button class="action-button">
                        <i class="fas fa-bell"></i>
                        <span class="badge">3</span>
                    </button>
                    <button class="action-button">
                        <i class="fas fa-envelope"></i>
                        <span class="badge">5</span>
                    </button>
                    <div class="dropdown">
                        <button class="dropdown-toggle">
                            <i class="fas fa-user-ninja"></i>
                            <span class="d-none d-md-inline">Admin User</span>
                            <i class="fas fa-chevron-down"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a href="/Settings/Profile" class="dropdown-item">
                                <i class="fas fa-user"></i> Profile
                            </a>
                            <a href="/Settings/Index" class="dropdown-item">
                                <i class="fas fa-cog"></i> Settings
                            </a>
                            <div class="dropdown-divider"></div>
                            <a href="/Account/Logout" class="dropdown-item">
                                <i class="fas fa-sign-out-alt"></i> Logout
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </header>

        <div class="content">
            <div class="content-header">
                <h1 class="content-title">Dashboard</h1>
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Inicio</a></li>
                    <li class="breadcrumb-item active">Dashboard</li>
                </ol>
            </div>

            <div class="summary-cards">
                <div class="card summary-card">
                    <div class="card-body">
                        <div class="summary-icon bg-primary">
                            <i class="fas fa-shopping-bag"></i>
                        </div>
                        <div class="summary-details">
                            <h3>@Model.Count()</h3>
                            <p>Total de produtos</p>
                            <div class="summary-progress">
                                <span class="progress-indicator">+5% desde o mes passado</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card summary-card">
                    <div class="card-body">
                        <div class="summary-icon bg-success">
                            <i class="fas fa-dollar-sign"></i>
                        </div>
                        <div class="summary-details">
                            <h3>@Model.Sum(p => p.Price).ToString("C")</h3>
                            <p>Todos os valores do inventario</p>
                            <div class="summary-progress">
                                <span class="progress-indicator">+12% desde o ano passado</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card summary-card">
                    <div class="card-body">
                        <div class="summary-icon bg-warning">
                            <i class="fas fa-users"></i>
                        </div>
                        <div class="summary-details">
                            <h3>125</h3>
                            <p>Todos os clientes</p>
                            <div class="summary-progress">
                                <span class="progress-indicator">+8% desde o mes passado</span>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card summary-card">
                    <div class="card-body">
                        <div class="summary-icon bg-info">
                            <i class="fas fa-chart-line"></i>
                        </div>
                        <div class="summary-details">
                            <h3>32</h3>
                            <p>Pedidos hoje</p>
                            <div class="summary-progress">
                                <span class="progress-indicator">+15% ontem</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="dashboard-section">
                <div class="section-header">
                    <div class="section-title">
                        <h2>Produtos</h2>
                        <p>Gerencie seu inventario de produtos</p>
                    </div>
                    <div class="section-actions">
                        <a asp-controller="ProductsApp" asp-action="CreateProduct" class="btn btn-primary">
                            <i class="fas fa-plus"></i> Adicione um novo produto
                        </a>
                    </div>
                </div>

                <div class="product-grid">
                    @foreach (var product in Model.Take(8))
                    {
                        <div class="product-card">
                            <a href="/Home/ProductDetails/@product.Id" class="product-link">
                                <div class="product-image">
                                    @if (product.Price > 100)
                                    {
                                        <span class="product-badge premium">Premium</span>
                                    }
                                    else if (product.Price < 50)
                                    {
                                        <span class="product-badge sale">Sale</span>
                                    }
                                    <i class="fas fa-shirt"></i>
                                </div>
                                <div class="product-info">
                                    <h3 class="product-name">@product.Name</h3>
                                    <div class="product-meta">
                                        <span class="product-price">@product.Price.ToString("C")</span>
                                    </div>
                                </div>
                            </a>
                        </div>
                    }
                </div>

                <div class="view-all">
                    <a href="/ProductsApp/Index" class="btn btn-outline-primary">Veja todos seus produtos</a>
                </div>
            </div>

            <div class="dashboard-section">
                <div class="section-header">
                    <div class="section-title">
                        <h2>Pedidos recentes</h2>
                        <p>Pedidos recentes dos clientes</p>
                    </div>
                    <div class="section-actions">
                        <a href="/Orders/Index" class="btn btn-outline-primary">
                            <i class="fas fa-list"></i> Todos os pedidos
                        </a>
                    </div>
                </div>

                <div class="card">
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer</th>
                                    <th>Date</th>
                                    <th>Amount</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                                </thead>
                                <tbody>
                                <tr>
                                    <td><a href="#" class="order-link">#ORD-2023-001</a></td>
                                    <td>
                                        <div class="customer-info">
                                            <i class="fas fa-user"></i>
                                            <span>John Doe</span>
                                        </div>
                                    </td>
                                    <td>@DateTime.Now.AddDays(-1).ToString("dd/MM/yyyy")</td>
                                    <td>$245.99</td>
                                    <td><span class="status-badge completed">Completed</span></td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="#" class="btn btn-sm btn-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-secondary" title="Print">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><a href="#" class="order-link">#ORD-2023-002</a></td>
                                    <td>
                                        <div class="customer-info">
                                            <i class="fas fa-user"></i>
                                            <span>Jane Smith</span>
                                        </div>
                                    </td>
                                    <td>@DateTime.Now.AddDays(-2).ToString("dd/MM/yyyy")</td>
                                    <td>$145.50</td>
                                    <td><span class="status-badge processing">Processing</span></td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="#" class="btn btn-sm btn-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-secondary" title="Print">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><a href="#" class="order-link">#ORD-2023-003</a></td>
                                    <td>
                                        <div class="customer-info">
                                            <i class="fas fa-user"></i>
                                            <span>Robert Johnson</span>
                                        </div>
                                    </td>
                                    <td>@DateTime.Now.AddDays(-2).ToString("dd/MM/yyyy")</td>
                                    <td>$89.99</td>
                                    <td><span class="status-badge shipped">Shipped</span></td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="#" class="btn btn-sm btn-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-secondary" title="Print">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><a href="#" class="order-link">#ORD-2023-004</a></td>
                                    <td>
                                        <div class="customer-info">
                                            <i class="fas fa-user"></i>
                                            <span>Emily Davis</span>
                                        </div>
                                    </td>
                                    <td>@DateTime.Now.AddDays(-3).ToString("dd/MM/yyyy")</td>
                                    <td>$320.75</td>
                                    <td><span class="status-badge cancelled">Cancelled</span></td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="#" class="btn btn-sm btn-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-secondary" title="Print">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td><a href="#" class="order-link">#ORD-2023-005</a></td>
                                    <td>
                                        <div class="customer-info">
                                            <i class="fas fa-user"></i>
                                            <span>Michael Wilson</span>
                                        </div>
                                    </td>
                                    <td>@DateTime.Now.AddDays(-3).ToString("dd/MM/yyyy")</td>
                                    <td>$175.25</td>
                                    <td><span class="status-badge completed">Completed</span></td>
                                    <td>
                                        <div class="action-buttons">
                                            <a href="#" class="btn btn-sm btn-info" title="View">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="#" class="btn btn-sm btn-secondary" title="Print">
                                                <i class="fas fa-print"></i>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </main>
</div>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#mobile-toggle, #sidebar-toggle').on('click', function() {
                $('.sidebar').toggleClass('show');
                $('.main-content').toggleClass('sidebar-open');
            });

            $('.dropdown-toggle').on('click', function() {
                $(this).next('.dropdown-menu').toggleClass('show');
            });

            $(document).on('click', function(e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.dropdown-menu').removeClass('show');
                }
            });

            $(document).on('click', function(e) {
                if ($(window).width() < 768) {
                    if (!$(e.target).closest('.sidebar').length && !$(e.target).closest('#mobile-toggle').length) {
                        $('.sidebar').removeClass('show');
                        $('.main-content').removeClass('sidebar-open');
                    }
                }
            });
        });
    </script>
}