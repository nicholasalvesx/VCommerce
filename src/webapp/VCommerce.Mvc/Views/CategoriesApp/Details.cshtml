@model VCommerce.Mvc.Models.CategoryViewModel

@{
    ViewData["Title"] = "Detalhes da Categoria";
}

<link rel="stylesheet" href="/css/category.css" asp-append-version="true" />

<div class="content-header">
    <h1 class="content-title">Detalhes da Categoria</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="/CategoriesApp/Index">Categorias</a></li>
        <li class="breadcrumb-item active">Detalhes</li>
    </ol>
</div>

<div class="dashboard-section">
    <div class="section-header">
        <div class="section-title">
            <h2><i class="fas fa-info-circle text-primary mr-2"></i>Informações da Categoria</h2>
            <p>Visualize os detalhes completos da categoria</p>
        </div>
        <div class="section-actions">
            <a asp-action="EditCategory" asp-route-id="@Model.CategoryId" class="btn btn-primary">
                <i class="fas fa-edit mr-1"></i> Editar
            </a>
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Voltar
            </a>
        </div>
    </div>

    <div class="row">
        <div class="col-md-8">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">Dados Básicos</h5>
                </div>
                <div class="card-body">
                    <div class="details-grid">
                        <div class="detail-item">
                            <div class="detail-label">ID</div>
                            <div class="detail-value">@Model.CategoryId</div>
                        </div>
                        
                        <div class="detail-item">
                            <div class="detail-label">Nome</div>
                            <div class="detail-value">@Model.CategoryName</div>
                        </div>
                        
                        <div class="detail-item detail-item-full">
                            <div class="detail-label">Descrição</div>
                            <div class="detail-value">
                                @if (string.IsNullOrEmpty(Model.Description))
                                {
                                    <span class="text-muted">Nenhuma descrição fornecida</span>
                                }
                                else
                                {
                                    @Model.Description
                                }
                            </div>
                        </div>
                        
                        <div class="detail-item">
                            <div class="detail-label">Status</div>
                            <div class="detail-value">
                                @if (Model.IsActive)
                                {
                                    <span class="badge badge-success">Ativa</span>
                                }
                                else
                                {
                                    <span class="badge badge-secondary">Inativa</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">Ícone</h5>
                </div>
                <div class="card-body text-center">
                    <div class="category-icon-large">
                        <i class="@(string.IsNullOrEmpty(Model.IconClass) ? "fas fa-folder" : "fas " + Model.IconClass)"></i>
                    </div>
                    <div class="mt-3">
                        <code>@(string.IsNullOrEmpty(Model.IconClass) ? "fa-folder" : Model.IconClass)</code>
                    </div>
                </div>
            </div>
            
            <div class="card shadow-sm">
                <div class="card-header bg-transparent">
                    <h5 class="card-title mb-0">Produtos</h5>
                </div>
                <div class="card-body">
                    <div class="text-center py-3">
                        @if (Model.ProductCount > 0)
                        {
                            <div class="product-count">@Model.ProductCount</div>
                            <p>produtos nesta categoria</p>
                            <a href="/ProductsApp/Index?categoryId=@Model.CategoryId" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-eye mr-1"></i> Ver Produtos
                            </a>
                        }
                        else
                        {
                            <div class="empty-products">
                                <i class="fas fa-box-open"></i>
                                <p>Nenhum produto nesta categoria</p>
                            </div>
                            <a href="/ProductsApp/CreateProduct" class="btn btn-outline-primary btn-sm">
                                <i class="fas fa-plus mr-1"></i> Adicionar Produto
                            </a>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
    
    <div class="form-actions mt-4">
        <a asp-action="EditCategory" asp-route-id="@Model.CategoryId" class="btn btn-primary">
            <i class="fas fa-edit mr-1"></i> Editar Categoria
        </a>
        <a asp-action="DeleteCategory" asp-route-id="@Model.CategoryId" class="btn btn-danger">
            <i class="fas fa-trash mr-1"></i> Excluir Categoria
        </a>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <i class="fas fa-arrow-left mr-1"></i> Voltar para Lista
        </a>
    </div>
</div>
