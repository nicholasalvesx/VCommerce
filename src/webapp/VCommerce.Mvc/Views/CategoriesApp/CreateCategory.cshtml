@model VCommerce.Mvc.Models.CategoryViewModel

@{
    ViewData["Title"] = "Nova Categoria";
}

<link rel="stylesheet" href="/css/category.css" asp-append-version="true" />

<div class="content-header">
    <h1 class="content-title">Nova Categoria</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-action="Index">Categorias</a></li>
        <li class="breadcrumb-item active">Nova Categoria</li>
    </ol>
</div>

<div class="dashboard-section">
    <div class="section-header">
        <div class="section-title">
            <h2>Informações da Categoria</h2>
            <p>Preencha os dados para criar uma nova categoria</p>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="CreteCategory">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                
                <div class="form-group">
                    <label asp-for="Name" class="control-label"></label>
                    <input asp-for="Name" class="form-control" placeholder="Digite o nome da categoria" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                
                <div class="form-actions">
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> Salvar
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}