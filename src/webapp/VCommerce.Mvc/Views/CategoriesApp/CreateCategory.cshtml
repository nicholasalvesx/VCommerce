@model VCommerce.Mvc.Models.CategoryViewModel

@{
    ViewData["Title"] = "Nova Categoria";
}

<link rel="stylesheet" href="/css/category.css" asp-append-version="true" />

<div class="content-header">
    <h1 class="content-title">Nova Categoria</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="/CategoriesApp/Index">Categorias</a></li>
        <li class="breadcrumb-item active">Nova Categoria</li>
    </ol>
</div>

<div class="dashboard-section">
    <div class="section-header">
        <div class="section-title">
            <h2><i class="fas fa-folder-plus text-primary mr-2"></i>Informações da Categoria</h2>
            <p>Preencha os dados para criar uma nova categoria</p>
        </div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <form method="post" asp-action="CreateCategory">
                <div asp-validation-summary="All" class="text-danger mb-4 alert alert-danger p-2"></div>

                <div class="form-grid">
                    <div class="form-group form-group-full">
                        <label asp-for="CategoryName" class="form-label">Nome da Categoria</label>
                        <input asp-for="CategoryName" class="form-control" placeholder="Digite o nome da categoria" />
                        <span asp-validation-for="CategoryName" class="text-danger"></span>
                    </div>

                    <div class="form-group form-group-full">
                        <label asp-for="Description" class="form-label">Descrição</label>
                        <textarea asp-for="Description" class="form-control" rows="4" placeholder="Digite a descrição da categoria"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="IconClass" class="form-label">Ícone</label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i id="icon-preview" class="fas fa-folder"></i></span>
                            </div>
                            <input asp-for="IconClass" class="form-control" placeholder="fa-folder" id="iconClass" />
                        </div>
                        <span asp-validation-for="IconClass" class="text-danger"></span>
                        <small class="form-text text-muted">Digite o nome do ícone FontAwesome (ex: fa-shopping-cart)</small>
                    </div>

                    <div class="form-group">
                        <label class="form-label d-block">Status</label>
                        <div class="custom-control custom-switch">
                            <input type="checkbox" class="custom-control-input" id="isActive" asp-for="IsActive" checked>
                            <label class="custom-control-label" for="isActive">Categoria Ativa</label>
                        </div>
                        <span asp-validation-for="IsActive" class="text-danger"></span>
                    </div>
                </div>

                <div class="form-actions mt-4">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save mr-2"></i> Salvar Categoria
                    </button>
                    <a asp-action="Index" class="btn btn-outline-secondary">
                        <i class="fas fa-arrow-left mr-1"></i> Voltar
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            $('#iconClass').on('change keyup', function() {
                var iconClass = $(this).val();
                if (iconClass) {
                    $('#icon-preview').attr('class', 'fas ' + iconClass);
                } else {
                    $('#icon-preview').attr('class', 'fas fa-folder');
                }
            });
        });
    </script>
}