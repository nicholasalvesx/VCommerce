@model IEnumerable<VCommerce.Mvc.Models.CategoryViewModel>

@{
    ViewData["Title"] = "Categorias";
}

<div class="content-header">
    <h1 class="content-title">Categorias</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item active">Categorias</li>
    </ol>
</div>

<div class="dashboard-section">
    <div class="section-header">
        <div class="section-title">
            <h2>Lista de Categorias</h2>
            <p>Gerencie as categorias de produtos</p>
        </div>
        <div class="section-actions">
            <a asp-action="CreateCategory" class="btn btn-primary">
                <i class="fas fa-plus"></i> Nova Categoria
            </a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th style="width: 60px;"></th>
                            <th>Nome</th>
                            <th>Descrição</th>
                            <th style="width: 100px;">Ordem</th>
                            <th style="width: 100px;">Status</th>
                            <th style="width: 100px;">Produtos</th>
                            <th style="width: 150px;">Ações</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="text-center">
                                    <i class="@(string.IsNullOrEmpty(item.IconClass) ? "fas fa-folder" : "fas " + item.IconClass)" style="font-size: 20px; color: var(--primary-color);"></i>
                                </td>
                                <td>@item.Name</td>
                                <td>@(string.IsNullOrEmpty(item.Description) ? "-" : item.Description)</td>
                                <td class="text-center">@item.DisplayOrder</td>
                                <td class="text-center">
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">Ativa</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">Inativa</span>
                                    }
                                </td>
                                <td class="text-center">
                                    @if (item.ProductCount > 0)
                                    {
                                        <a href="/ProductsApp/Index?categoryId=@item.Id" class="badge badge-info">
                                            @item.ProductCount produtos
                                        </a>
                                    }
                                    else
                                    {
                                        <span class="badge badge-light">0 produtos</span>
                                    }
                                </td>
                                <td>
                                    <div class="action-buttons">
                                        <a asp-action="EditCategory" asp-route-id="@item.Id" class="btn btn-sm btn-primary" title="Editar">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info" title="Detalhes">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a asp-action="DeleteCategory" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Excluir">
                                            <i class="fas fa-trash"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            
            @if (!Model.Any())
            {
                <div class="empty-state">
                    <div class="empty-state-icon">
                        <i class="fas fa-folder-open"></i>
                    </div>
                    <h3>Nenhuma categoria encontrada</h3>
                    <p>Comece criando uma nova categoria para seus produtos.</p>
                    <a asp-action="CreateCategory" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Nova Categoria
                    </a>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
    @if (TempData["SuccessMessage"] != null)
    {
        <script>
            $(document).ready(function() {
                alert('@TempData["SuccessMessage"]');
            });
        </script>
    }
}