@model VCommerce.Mvc.Models.ProductViewModel

@{
    ViewData["Title"] = "Excluir Produto";
}

<link rel="stylesheet" href="/css/product.css" asp-append-version="true" />

<div class="content-header">
    <h1 class="content-title">Excluir Produto</h1>
    <ol class="breadcrumb">
        <li class="breadcrumb-item"><a href="/Home/Index">Home</a></li>
        <li class="breadcrumb-item"><a href="/ProductsApp/Index">Produtos</a></li>
        <li class="breadcrumb-item active">Excluir Produto</li>
    </ol>
</div>

<div class="dashboard-section">
    <div class="section-header">
        <div class="section-title">
            <h2>Confirmação de Exclusão</h2>
            <p>Tem certeza que deseja excluir este produto?</p>
        </div>
    </div>
    
    <div class="delete-confirmation">
        <div class="product-details">
            <div class="product-image">
            </div>
            
            <div class="product-info">
                <h3 class="product-name">@Model.Name</h3>
                
                <div class="detail-row">
                    <span class="detail-label">Categoria:</span>
                    <span class="detail-value">@Model.Category</span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Preço:</span>
                    <span class="detail-value">@Model.Price.ToString("C")</span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Estoque:</span>
                    <span class="detail-value">@Model.Stock unidades</span>
                </div>
                
                <div class="detail-row">
                    <span class="detail-label">Descrição:</span>
                    <span class="detail-value">@Model.Description</span>
                </div>
            </div>
        </div>
        
        <div class="warning-message">
            <i class="fas fa-exclamation-triangle"></i>
            <p>Esta ação não pode ser desfeita. Todos os dados relacionados a este produto serão permanentemente excluídos.</p>
        </div>
        
        <form asp-action="DeleteProduct" method="post">
            <input type="hidden" asp-for="Id" />
            <div class="form-actions">
                <button type="submit" class="btn btn-danger">
                    <i class="fas fa-trash-alt"></i> Confirmar Exclusão
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary">
                    <i class="fas fa-arrow-left"></i> Cancelar
                </a>
            </div>
        </form>
    </div>
</div>

<style>
    .delete-confirmation {
        background-color: #fff;
        border-radius: 8px;
        padding: 20px;
    }
    
    .product-details {
        display: flex;
        gap: 20px;
        margin-bottom: 30px;
    }
    
    .product-image {
        width: 200px;
        height: 200px;
        border-radius: 8px;
        overflow: hidden;
        border: 1px solid #e0e0e0;
    }
    
    .product-image img {
        width: 100%;
        height: 100%;
        object-fit: cover;
    }
    
    .product-info {
        flex: 1;
    }
    
    .product-name {
        margin: 0 0 15px;
        font-size: 20px;
        font-weight: 600;
    }
    
    .detail-row {
        margin-bottom: 10px;
    }
    
    .detail-label {
        font-weight: 600;
        color: #6c757d;
        margin-right: 5px;
    }
    
    .warning-message {
        background-color: rgba(244, 67, 54, 0.1);
        border-left: 4px solid #f44336;
        padding: 15px;
        margin-bottom: 20px;
        display: flex;
        align-items: center;
        gap: 15px;
        border-radius: 4px;
    }
    
    .warning-message i {
        font-size: 24px;
        color: #f44336;
    }
    
    .warning-message p {
        margin: 0;
        color: #333;
    }
    
</style>